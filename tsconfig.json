{
  "extends": "@react-native/typescript-config/tsconfig.json",
  "compilerOptions": {
    "jsx": "react-native",
    "baseUrl": "./src",
    "paths": {
      "@/*": ["./*"],
      "@components/*": ["./components/*"],
      "@assets/*": ["./assets/*"],
      "@hooks/*": ["./hooks/*"],
      "@screens/*": ["./screens/*"],
      "@utils/*": ["./utils/*"],
      "@context/*": ["./context/*"],
      "@models/*": ["./models/*"],
      "@redux/*": ["./redux/*"]
    },
    "types": ["react-native-reanimated"],
  },
  "include": ["src/env.d.ts", "src/**/*"]
}
